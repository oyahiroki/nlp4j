<?xml version="1.0" encoding="UTF-8"?>
<patterns lang="ja">

	<!-- 名詞で終わる（説明文など） -->
	<pattern facet="pattern.root_noun" value="{0.lex}">
		<w id="0" upos="NOUN" relation="ROOT">
		</w>
	</pattern>

	<!-- 名詞で終わる（説明文など） XXまたはYY -->
	<pattern facet="pattern.root_noun" value="{4.lex}">
		<w id="0" upos="NOUN" relation="ROOT">
			<w id="2" upos="CCONJ" lex="/(又|また)/" relation="cc">
				<w id="3" upos="ADP" lex="は" />
			</w>
			<w id="4" upos="NOUN" relation="nmod">
			</w>
		</w>
	</pattern>
	<!-- 名詞で終わる（説明文など） XXまたはYY -->
	<pattern facet="pattern.root_noun" value="{4.lex}">
		<w id="0" upos="NOUN" relation="ROOT">
			<w id="2" upos="CCONJ" lex="/(もしくは|あるいは)/" relation="cc">
			</w>
			<w id="4" upos="NOUN" relation="nmod">
			</w>
		</w>
	</pattern>


</patterns>

